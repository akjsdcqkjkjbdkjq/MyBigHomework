            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_8"
            android:text=""
            android:textSize="50sp" />

        <TextView
            android:id="@+id/man_vs_ai_line_8"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/man_vs_ai_place_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_9"
            android:text=""
            android:textSize="50sp" />
    </LinearLayout>
</LinearLayout>