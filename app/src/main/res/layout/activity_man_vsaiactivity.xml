<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ManVSAIActivity">

    <TextView
        android:id="@+id/man_vs_ai_who_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/maw2"
        android:textSize="50sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/man_vs_ai_who_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/maw1"
        android:textSize="50sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/man_vs_ai_place_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_1"
            android:text=""
            android:textSize="50sp" />

        <TextView
            android:id="@+id/man_vs_ai_line_1"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/man_vs_ai_place_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_2"
            android:text=""
            android:textSize="50sp" />

        <TextView
            android:id="@+id/man_vs_ai_line_2"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/man_vs_ai_place_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_3"
            android:text=""
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/man_vs_ai_line_3"
        android:layout_width="315dp"
        android:layout_height="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/man_vs_ai_place_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_4"
            android:text=""
            android:textSize="50sp" />

        <TextView
            android:id="@+id/man_vs_ai_line_4"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/man_vs_ai_place_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_5"
            android:text=""
            android:textSize="50sp" />

        <TextView
            android:id="@+id/man_vs_ai_line_5"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/man_vs_ai_place_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="man_vs_ai_place_6"
            android:text=""
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/man_vs_ai_line_6"
        android:layout_width="315dp"
        android:layout_height="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/man_vs_ai_place_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
